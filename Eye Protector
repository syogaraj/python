import pynotify #for notification
import time
def sendmessage(title,message):
    pynotify.init("Eye Protector")
    noti = pynotify.Notification(title,message)
    noti.show();
    return
while (True):
    time.sleep(1200); #time interval
    sendmessage("Eye Protector!!","Warning!! Looking in the Computer for more than 20 mins... Focus on a object in a long distance!")
